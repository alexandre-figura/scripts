[user]
    email = <me>@<something>
    name = Alexandre Figura
[alias]
    a = add .
    b = branch
    c = commit -m
    ca = commit --amend
    ck = checkout
    ckb = !git checkout -b $1 && git push -u origin $1 && :
    d = diff
    ds = diff --staged
    f = fetch
    l = log
    ll = log --oneline --abbrev-commit --all --graph --decorate --color
    m = merge --ff-only
    pl = pull --rebase
    ps = push
    r = rebase
    rmb = !git checkout master && git branch -D $1 && git push origin -d $1 && :
    ri = rebase -i
    s = status
    sh = show
