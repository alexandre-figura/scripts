[user]
    email = <me>@<something>
    name = Alexandre Figura
[alias]
    a = add .
    b = branch
    c = commit -m
    ca = commit --amend
    ce = commit -e -m
    ck = checkout
    ckb = !git checkout -b $1 && git push -u origin $1 && :
    d = diff
    ds = diff --staged
    f = fetch
    l = log
    ll = log --oneline --abbrev-commit --all --graph --decorate --color
    m = merge --ff-only
    mpl = !git checkout main && git pull --rebase && :
    pl = pull --rebase
    ps = push --follow-tags
    r = rebase
    rc = rebase --continue
    rmb = !git checkout main && git branch -D $1 && git push origin -d $1 && :
    rmt = !git tag --delete $1 && git push --delete origin $1 && :
    ri = rebase -i
    s = status
    sh = show
    t = !git tag -a $1 && git push --follow-tags && :
